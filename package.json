{
  "name": "timelapse-journal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:prod": "npm run build:prod:frontend && npm run build:prod:backend",
    "build:prod:frontend": "cd frontend && npm run build:prod",
    "build:prod:backend": "cd backend && npm run build:prod",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "start:prod": "concurrently \"npm run start:prod:frontend\" \"npm run start:prod:backend\"",
    "start:prod:frontend": "cd frontend && npm run start:prod",
    "start:prod:backend": "cd backend && npm run start:prod",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test",
    "test:prod": "cd backend && npm run test:prod",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "mysql2": "^3.14.3"
  }
}
